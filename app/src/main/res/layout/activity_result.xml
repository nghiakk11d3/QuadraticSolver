<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#004051"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/img_1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUADRATIC SOLVER"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/baloo_da"
            android:text="RESULT"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- TextView hiển thị loại nghiệm (2 nghiệm, 1 nghiệm, vô nghiệm) -->
        <TextView
            android:id="@+id/SolutionType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:hint="Loại nghiệm"
            android:padding="12dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <!-- TextView hiển thị nghiệm x1 -->
        <TextView
            android:id="@+id/X1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="sans-serif"
            android:hint="Nghiệm x1"
            android:padding="12dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <!-- TextView hiển thị nghiệm x2 -->
        <TextView
            android:id="@+id/X2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="sans-serif"
            android:hint="Nghiệm x2"
            android:padding="12dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonReturn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"

                android:backgroundTint="#004051"
                android:padding="12dp"
                android:text="Return"
                android:textColor="#FAFAFA"
                android:textSize="20sp"

                app:icon="@drawable/returni" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>